{
    "name": "fb",
    "api_root": "https://graph.facebook.com",
    "resources": [
        {
            "path": "oauth/access_token",
            "methods": [ "get" ],
            "params": {
                "client_id": "required",
                "client_secret": "required",
                "grant_type": "required"
            }
        },
        {
            "path": "search",
            "methods": [ "get" ],
            "params": {
                "q": "optional",
                "type": "optional",
                "center": "optional",
                "distance": "optional",
                "fields": "optional",
                "access_token": "required"
            }
        },
        {
            "path": ":id",
            "methods": [ "get" ],
            "params": {
                "fields": "optional",
                "access_token": "required"
            }
        },
        {
            "path": ":id/feed",
            "methods": [ "post" ],
            "params": {
                "access_token": "required",
                "message": "required",
                "privacy": "optional"
            }
        },
        {
            "path": ":id/picture",
            "methods": [ "get" ],
            "params": {
                "type": "optional",
                "width": "optional",
                "height": "optional",
                "redirect": "optional"
            }
        },
        {
            "path": "fql",
            "methods": [ "get" ],
            "params": {
               "q": "optional"
            }
        }
    ]
}